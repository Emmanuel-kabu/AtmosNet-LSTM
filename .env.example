# ── Application Configuration ────────────────────────────────────────────
# Copy this file to .env and adjust values for your environment.
#
# All variables are prefixed with ATM_ and loaded by Pydantic Settings.
# ─────────────────────────────────────────────────────────────────────────

# General
ATM_ENVIRONMENT=development         # development | staging | production
ATM_DEBUG=false
ATM_LOG_LEVEL=INFO

# Paths
ATM_DATA_DIR=./data
ATM_LAKE_ROOT=./data/lake
ATM_MANIFESTS_DIR=./data/manifests
ATM_MODEL_DIR=./models
ATM_ARTIFACTS_DIR=./artifacts

# Model hyperparameters
ATM_SEQUENCE_LENGTH=24
ATM_FORECAST_HORIZON=1
ATM_BATCH_SIZE=32
ATM_EPOCHS=50
ATM_LEARNING_RATE=0.001
ATM_LSTM_UNITS=64
ATM_DROPOUT_RATE=0.2

# API / Serving
ATM_API_HOST=0.0.0.0
ATM_API_PORT=8000
ATM_API_WORKERS=1

# Database (pipeline watermarks / metadata)
# For local dev with docker-compose Postgres:
ATM_DATABASE_URL=postgresql+psycopg2://atm:atm_secret@localhost:5432/atm_forecast
# For lightweight dev without Postgres:
# ATM_DATABASE_URL=sqlite:///./atm_forecast.db

# Experiment tracking
ATM_MLFLOW_TRACKING_URI=http://localhost:5000
ATM_MLFLOW_EXPERIMENT_NAME=atm-forecast
ATM_WANDB_PROJECT=atm-forecast
ATM_WANDB_ENTITY=                       # W&B team/org (leave empty for personal)
ATM_WANDB_ENABLED=false
ATM_WANDB_API_KEY=                       # https://wandb.ai/authorize

# Monitoring
ATM_ENABLE_PROMETHEUS=true
ATM_DRIFT_THRESHOLD=0.05
ATM_EVIDENTLY_REPORTS_DIR=./artifacts/reports
ATM_MONITORING_SCHEDULE_MINUTES=60
